                    </form>
                </div>
                <br>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-2 outline">
            <h5>Not Important:</h5>
        </div>
        <div class="col-5 outline quad_segment">
            <br>
            @foreach (var task in Model[3])
