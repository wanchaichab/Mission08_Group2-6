@{
    ViewData["Title"] = "Task Page";
}

@model Mission08_Group2_6.Models.TaskEntry

<h2>Task Creation</h2>
<h4>Fill out the information below</h4>
<h4>Be sure to include the name of your task, the quadrant it's 
    in, and whether the task has been completed or not. The 
    quadrants are as follows: </h4>
<ul>
    <li>Quadrant 1: Urgent/Important</li>
    <li>Quadrant 2: Not Urgent/Important</li>
    <li>Quadrant 3: Urgent/Not Important</li>
    <li>Quadrant 4: Not Urgent/Not Important</li>
</ul>
<div class="container">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="TaskName">Task</label>
        <input asp-for="TaskName" /><br />

        <label asp-for="DueDate">Due Date</label>
        <input type="date" asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value="1">Quadrant 1</option>
            <option value="2">Quadrant 2</option>
            <option value="3">Quadrant 3</option>
            <option value="4">Quadrant 4</option>
        </select><br />

        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Completed">Completed</label>
        <select asp-for="Completed">
            <option value=false>Not yet</option>
            <option value=true>Yes</option>
        </select><br />

        <button type="Submit">Submit</button>

    </form>
</div>

